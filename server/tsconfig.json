{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      /* Modules */
      "rootDir": "src" /* Specify the root folder within your source files. */,
      "target": "ES2020",
      "module": "commonjs",
  
      /* Emit */
      "outDir": "dist" /* Specify an output folder for all emitted files. */,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
}
